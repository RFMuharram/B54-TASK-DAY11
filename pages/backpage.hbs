      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="./CSS/main.css" />
    <!-- <link rel="stylesheet" href="./CSS/home.css"> -->
    <link rel="stylesheet" href="./CSS/contactform.css" />
  </head>
  <body>
    <!-- NAVBAR -->
    <nav>
      <div>
        <img
          src="../assets/img/logo-brand.png"
          alt="logo-brand"
          class="logo-brand"
        />
      </div>
      <ul>
        <li><a href="./index.html">Home</a></li>
        <li><a href="./myproject.html">MyProject</a></li>
        <li><a href="./testi.html">Testimonials</a></li>
        <li><a href="./backpage.html" class="active">Contact Me</a></li>
      </ul>
      <button id="hamburger-trigger" onclick="toggleHamburger()">
        <i class="fa-solid fa-bars fa-2x"></i>
      </button>
    </nav>
    <div class="hamburger-nav hide">
      <a href="./index.html">Home</a>
      <a href="./myproject.html">MyProject</a>
      <a href="./testi.html">Testimonials</a>
      <a href="./backpage.html" class="active">Contact Me</a>
    </div>
    <!-- CONTACT FORM -->

    <div class="header">
      <h1 class="title">Get in Touch</h1>
    </div>
    <div class="wrapper-form">
      <form>
        <div>
          <label for="name">Name</label>
          <input type="text" id="name" />
        </div>

        <div>
          <label for="email">Email</label>
          <input type="text" id="email" />
        </div>

        <div>
          <label for="phone">Phone Number</label>
          <input type="text" id="phone" />
        </div>

        <div>
          <label for="subject">Subject</label>
          <select id="subject">
            <option>Choose</option>
            <option>Offrering</option>
            <option>Gathering</option>
          </select>
        </div>

        <div>
          <label for="message">Message</label>
          <textarea id="message"></textarea>
        </div>
        <div>
          <button type="button" onclick="submitHandler()">Submit</button>
        </div>
      </form>
    </div>
    <script src="./JS/hamburger.js"></script>
    <script src="./JS/contact.js"></script>
    <!-- CONTACT FORM -->
  </body>
